# Companeon Worker Service Environment Variables

# Server
NODE_ENV=development
PORT=8080
SERVICE_NAME=companeon-worker

# Google Cloud
GOOGLE_CLOUD_PROJECT=companeon
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Service URLs (internal communication)
AGENT_SERVICE_URL=http://localhost:8080
API_SERVICE_URL=http://localhost:8081

# Feature flags
ENABLE_PRICE_CACHE=true
ENABLE_TRANSFER_AGENT=true

# CoinMarketCap API
CMC_API_KEY=

# Sub-delegation key (for executing recurring transfers and DCA swaps via chained delegation)
BACKEND_SUBDELEGATION_KEY=

# 0x API Key (for DCA swap execution via 0x aggregator)
ZEROX_API_KEY=

# RPC URLs (optional, defaults to public nodes)
SEPOLIA_RPC_URL=
BASE_RPC_URL=
