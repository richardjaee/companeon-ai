# Companeon Worker Service Environment Variables

# Server
NODE_ENV=development
PORT=8080
SERVICE_NAME=companeon-worker

# Google Cloud
GOOGLE_CLOUD_PROJECT=companeon
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Service URLs (internal communication)
AGENT_SERVICE_URL=http://localhost:8080
API_SERVICE_URL=http://localhost:8081

# Feature flags
ENABLE_PRICE_CACHE=true
ENABLE_TRANSFER_AGENT=true

# CoinMarketCap API
CMC_API_KEY=

# Transfer Agent (for executing recurring transfers via chained delegation)
TRANSFER_AGENT_PRIVATE_KEY=

# DCA Agent (for executing DCA orders via chained delegation)
DCA_AGENT_PRIVATE_KEY=

# RPC URLs (optional, defaults to public nodes)
SEPOLIA_RPC_URL=
BASE_RPC_URL=
