PORT=8080

# Vertex AI
GOOGLE_CLOUD_PROJECT=
VERTEX_LOCATION=us-central1
VERTEX_MODEL=gemini-1.5-pro

# Or use Publisher REST with API key (preferred for quick setup)
GOOGLE_GENAI_API_KEY=
# Option A: Publisher REST (API key)
PUBLISHER_MODEL=gemini-2.5-pro

# Option B: Vertex AI (Business; uses ADC)
# GOOGLE_CLOUD_PROJECT=your-project
# VERTEX_LOCATION=us-central1
# VERTEX_MODEL=gemini-1.5-pro

# Perplexity (web research)
PPLX_API_KEY=

# Price tool (CoinMarketCap)
CMC_API_KEY=

# Network / Chain
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Signer configuration
SIGNER_MODE=ENV_EOA
PRIVATE_KEY=

# Logging
LOG_LEVEL=info

# Timeouts (ms), heartbeats, guardrails
# If any operation exceeds TIMEOUT_* it is aborted; console logs emit heartbeats while waiting.
TIMEOUT_TASK_MS=120000
TIMEOUT_MODEL_MS=30000
TIMEOUT_TOOL_MS=20000
REQUEST_TIMEOUT_MS=125000
HEARTBEAT_MS=5000

# Domain allowlist for http/x402 tools (comma-separated). Empty = allow all.
ALLOW_DOMAINS=

# x402 / Coinbase Developer Platform (optional)
CDP_API_KEY_ID=
CDP_API_KEY_SECRET=
X402_FACILITATOR_URL=https://api.x402.coinbase.com

# Notes:
# - Vertex AI (GOOGLE_CLOUD_PROJECT/LOCATION/MODEL) is preferred in production.
# - GOOGLE_GENAI_API_KEY is the "Publisher" (Google AI Studio) API key used as a fallback
#   or for local development without Vertex; set PUBLISHER_MODEL accordingly.
